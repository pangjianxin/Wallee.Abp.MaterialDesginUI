<MudButton Color="@Color" OnClick="@Clicked" Disabled="@Disabled">
    @if (Icon != null)
    {
        <MudIcon Icon="@Icon" Class="me-1"></MudIcon>
    }
    @Text
</MudButton>

@code {

    [Parameter]
    public Color Color { get; set; } = Color.Default;

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public Func<Task> Clicked { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}
